<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.inledco.fluvalsmart.main.NewsFragment">

    <ImageView
        android:id="@+id/news_web1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_fluval_home"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/news_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:drawableLeft="@mipmap/ic_faq"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimaryDark"
        android:text="@string/FAQ"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/news_troubleshooting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:drawableLeft="@mipmap/ic_troubleshooting"
        android:textSize="16sp"
        android:textColor="@color/colorTextPrimaryDark"
        android:text="@string/troubleshooting"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorDivider"/>

</LinearLayout>
