<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LightProFragment">

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <!--<android.support.constraint.Guideline-->
        <!--android:id="@+id/guideline5"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--app:layout_constraintGuide_percent="0.88"/>-->

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/pro_line_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/pro_linearlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/ic_background_pro"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#55000000"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pro_line_chart">

            <TextView
                android:id="@+id/pro_tv_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="TextView"
                android:textColor="@color/colorTextPrimary"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/pro_tv_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_theme"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"/>

            <SeekBar
                android:id="@+id/pro_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:max="1440"
                android:min="0"
                android:progressBackgroundTint="@color/colorGray"
                android:progressTint="@color/colorGreen"
                android:thumbTint="@color/colorGreen"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/pro_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx:xx"
                android:textColor="@color/colorTextPrimary"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pro_btn_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ripple_theme"
                android:drawableTop="@mipmap/ic_import"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/light_auto_export"
                android:textColor="@color/colorTextPrimary"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/pro_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ripple_theme"
                android:drawableTop="@mipmap/ic_export"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/light_auto_save"
                android:textColor="@color/colorTextPrimary"
                android:textSize="10sp"/>

            <ToggleButton
                android:id="@+id/pro_tb_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ripple_theme"
                android:drawableTop="@drawable/selector_icon_preview_stop"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:textColor="@color/colorTextPrimary"
                android:textOff="@string/light_auto_preview"
                android:textOn="@string/light_auto_stop"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/pro_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ripple_theme"
                android:drawableTop="@mipmap/ic_edit"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/edit"
                android:textColor="@color/colorTextPrimary"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/pro_btn_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/ripple_theme"
                android:drawableTop="@mipmap/ic_overview_white"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="@string/overview"
                android:textColor="@color/colorTextPrimary"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>